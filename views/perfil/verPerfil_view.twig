<!DOCTYPE html>
<head>
	<meta charset="utf-8">
	<title>{{ conf.nombre }}</title>
	<link rel="StyleSheet" href="css/index.css" type="text/css" />
	<link rel="StyleSheet" href="css/estilos/{{ conf.estiloactual }}" type="text/css" />
	<script src="js/jquery-1.8.2.min.js" type="text/javascript"></script>
	<script src="js/jquery.validate.js" type="text/javascript"></script>
	<script src="js/login_validation.js" type="text/javascript"></script>
	<script src="js/signin_validation.js" type="text/javascript"></script>	
	<script src="js/effects.js" type="text/javascript"></script>
	<script src="js/validar_formularios.js" type="text/javascript"></script>
	<script src="js/insertInput.js" type="text/javascript"></script>

<header id="header">
			<div id="top-nav">
				<div class="wrapper-header">
					<a href="index.php">
						<img src="img/logo.png" alt="logo" id="logo">
					</a>
                    <ul class="util">
					{% if logueado == false %}
						<li id="tab-username" class="tab_util">
							<span class="nav-text"><a id="btn-open-login" href="#">-Iniciar sesion-</a></span>
						</li>
                        <li class="tab_util">
							<span class="nav-text"><a id="btn-open-signin" href="#">-Registrarse-</a></span>
						</li>
					{% else %}
						<li id='tab-logout' class='tab_util'>
							<span class='nav-text'><a href='UserLogout.php'>-Cerrar sesion-</a></span>
						</li>
						<li id='tab-index' class='tab_util'>
							<span class='nav-text'><a href='index.php'>-Inicio-</a></span>
						</li>
					{% endif %}	
					</ul>	
				</div>
			</div>
</header>

<body class='wrapper-body'>	
	<div class='data-container'>	
	
				<div>
					{% if logueado == true %}
						<form method='post' name='submitExportar' action='ExportarCV.php?id={{ idUser }}'>
							<label for='select-template-format'>Exportar C.V como:</label>
							<select name='formato' id='select-template-format'>
                            	{% for plantilla in plantillas %}
                    				<option value="{{ plantilla.getId() }}">{{ plantilla.getDescripcion() }}</option>
                				{% endfor %}
                                <input type='submit' name='submitExportar' value='Enviar'>
							</select>
                        </form>
                    {% endif %}
				</div><br><hr><br>
				
				<form method='post' action='MostrarDatosUsuario.php?id={{ idUser }}'>
                    <label>Ver C.V como: <select name='plantilla'>
					{% for plantilla in plantillas %}
                    	<option value="{{ plantilla.getId() }}">{{ plantilla.getDescripcion() }}</option>
                    {% endfor %}
                    </select></label>
                    	<input type='submit' name='submitVerPlantilla' value='Ver'>   
                    </form>
                    
                    {% if isset_view_page %}
                    	{% include view_page %}
                    {% endif %}

				
		
	<footer id="footer">
			<div id="footer-tab" class="wrapper-footer">
				<ul class="nav-footer">
					<li class="tab_footer">
